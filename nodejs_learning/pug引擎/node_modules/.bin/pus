#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node" --harmony "$basedir/../pus/bin/pus" "$@"
  ret=$?
else 
  node --harmony "$basedir/../pus/bin/pus" "$@"
  ret=$?
fi
exit $ret
